  gem 'capybara'
  gem 'rspec'
  gem 'rspec-rails'
  gem 'fabrication'
  gem 'wirble'
  gem 'spork'
  gem 'fuubar'
  gem 'tapp'
  gem 'guard'
  gem 'guard-rspec'
  gem 'guard-spork', git: 'git://github.com/guard/guard-spork.git'
  gem 'rb-fsevent'
  gem 'growl'
end

# Gems used only for assets and not required
# in production environments by default.
